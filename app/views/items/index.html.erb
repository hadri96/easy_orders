<div class="ctn-menu">
  <h4>What we have to offer :</h4>
    <% @categories.each do |category| %>
      <div class="items-list">
        <h3><%= category.capitalize %></h3>
        <div class="item-wrapper">
          <% @items.where(category: category).each do |item| %>
            <div class="item-inner">
              <%= link_to item_path(item), :class => "link-to" do %>
                <%= image_tag item.picture_url, :class => "item-image" %>
                <p><%= item.name%></p>
                <p><%= item.item_price%> CHF</p>
              <% end %>
            </div>
          <% end %>
        </div>
      </div> 
    <% end %>
</div>
<div class="end-page-with-btn">
  <%= link_to 'Checkout', new_item_path, class: "btn-dark-blue" %>
