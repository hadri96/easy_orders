
<% if current_user.is_barman %>
  <% if @order.in_preparation %>
      document.getElementById('orderModalBody').innerHTML = '<%= escape_javascript(render("orders/order_barman_deliver", order: @order)) %>';
  <% else %>
      document.getElementById('orderModalBody').innerHTML = '<%= escape_javascript(render("orders/order_barman_prepare", order: @order)) %>';
  <% end %>
<% else %>
  document.getElementById('orderModalBody').innerHTML = '<%= escape_javascript(render("orders/order", order: @order)) %>';
<% end %>

$('#orderModal').modal('show');

