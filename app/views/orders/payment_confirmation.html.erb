<div class="banneruser-pay-conf">
</div>

<div class="pay-process">
  <i class="fas fa-play"></i>
  <i class="fas fa-ellipsis-h"></i>
  <i class="fas fa-credit-card"></i>
  <i class="fas fa-ellipsis-h"></i>
  <i class="fas fa-check-circle"></i>
</div>

<div class="ctn-show-pay-conf">
  <div class="ctn-show-infos-pay-conf">
    <h5>Thank you <%= current_user.first_name %> for your order:</h5>
    <div class="ctn-show-list-pay-conf"> 
      <% @order.items.each do |item| %>
        <div class="ctn-show-items-pay-conf">
        <p class="show-item-name-pay-conf"><%= item.name %></p>
        <p><%= item.item_price %></p>
        </div>
      <% end %>
      <div class="total-pay-conf">
        <h4>Total</h4>
        <%= @order.items.sum(&:item_price) %>
      </div>
    </div>
    <div class="btn-show-end-page-pay-conf">
      <%= link_to "Next", account_path, class: "btn-dark-blue-show-pay-conf" %>
    </div>
  </div>
</div>