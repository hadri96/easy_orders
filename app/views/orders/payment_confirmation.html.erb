<div class="banneruser-pay-conf">
</div>

<div class="pay-process">
  <i class="fas fa-play"></i>
  <i class="fas fa-ellipsis-h"></i>
  <i class="fas fa-credit-card"></i>
  <i class="fas fa-ellipsis-h"></i>
  <i class="fas fa-check-circle"></i>
</div>

<div class="ctn-show-pay-conf">
  <div class="ctn-show-infos-pay-conf">
    <h4>Hey <%= current_user.first_name %>!</h4>
    <h4>Thank you for your purchase</h4>
    <div class="ctn-show-list-pay-conf">
      <% @order.order_lists.each do |order_list| %>
        <div class="ctn-show-items-pay-conf">
          <p class="show-item-name-cart" style="padding-right: 10px;"><%= order_list.item_quantity %>X </p>
          <p class="show-item-name-pay-conf"><%= order_list.item.name %></p>
          <p><%= round_price(order_list.item.item_price * order_list.item_quantity) %>.-</p>
        </div>
      <% end %>
      <div class="total-pay-conf">
        <h4>Total</h4>
        <h4><%= round_price(@order.calculate_price) %> CHF</h4>
      </div>
    </div>
    <div class="btn-show-end-page-pay-conf">
      <%= link_to "Follow my order", my_orders_path, class: "btn-dark-blue-show-pay-conf" %>
    </div>
  </div>
</div>
